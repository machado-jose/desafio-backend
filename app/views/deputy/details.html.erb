<header id="header" class="ex-header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1><%= @deputy.name %></h1>
      </div> 
    </div>
    <div class="row">
      <div class='col-md-12'>
        <h3>
          <strong>Maior Gasto em 2021: </strong>
          <span>
            <%= number_to_currency(@deputy.biggest_expense_of_year(year: '2021').net_value, unit: "R$ ", separator: ",", delimiter: ".") %>
          </span>
        </h3>
      </div>
    </div>
    <div class="row">
      <div class='col-md-12'>
        <h3>
          <strong>Total Gasto em 2021: </strong>
          <span>
            <%= number_to_currency(@deputy.total_expense_of_year(year: '2021'), unit: "R$ ", separator: ",", delimiter: ".") %>
          </span>
        </h3>
      </div>
    </div>
  </div>
</header>

<div class="ex-basic-2">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="text-container dark">
          <table id='deputy_expense_table' class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Data de Emiss√£o</th>
                <th scope="col">Estabelecimento</th>
                <th scope="col">Valor</th>
                <th scope="col">Nota</th>
              </tr>
            </thead>
            <tbody>
              <% @deputy.all_expense_of_year(year: '2021').each do |deputy_expense| %>
                <tr>
                  <td><%= set_issuance_date(issuance_date: deputy_expense.issuance_date) %></td>
                  <td><%= set_provider(provider: deputy_expense.provider) %></td>
                  <td><%= number_to_currency(deputy_expense.net_value, unit: "R$ ", separator: ",", delimiter: ".") %></td>
                  <td><%= set_document_url(document_url: deputy_expense.document_url) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div> 
    </div> 
  </div> 
</div> 

<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jq-3.6.0/jszip-2.5.0/dt-1.11.5/af-2.3.7/b-2.2.2/b-colvis-2.2.2/b-html5-2.2.2/b-print-2.2.2/cr-1.5.5/date-1.1.2/fc-4.0.2/fh-3.2.2/kt-2.6.4/r-2.2.9/rg-1.1.4/rr-1.2.8/sc-2.0.5/sb-1.3.2/sp-2.0.0/sl-1.3.4/sr-1.1.0/datatables.min.js"></script>

<script>
  $(window).on('load', function() {
    $("#deputy_expense_table").DataTable({
      "info": false,
      "dom": 'ftp',
      "language": {
        "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/pt-BR.json"
      }
    })
  })
</script>
