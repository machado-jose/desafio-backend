<div class="modal fade" id="upload_csv_modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">An√°lise dos Gastos</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with(url: '/deputy/submit_csv', multipart: true) do |form| %>
        <input type='hidden' name='uf' value='RJ'>
        <div class="modal-body">
          <div class="custom-file mb-3">
            <label for="formFile" class="custom-file-label">Selecione um arquivo csv</label>
            <input class="custom-file-input" type="file" name='file' id="formFile" accept="txt/*">
          </div>
        </div>
        <div class='modal-footer'>
          <%= form.submit "Enviar", class: 'btn form-control-submit-button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
